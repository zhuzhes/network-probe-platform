[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    migrations,
    node_modules

per-file-ignores =
    __init__.py:F401
    tests/*:S101,S106
    */settings.py:S105
    */config.py:S105

max-complexity = 10
import-order-style = google
application-import-names = management_platform,agent,shared